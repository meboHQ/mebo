<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Help for <%= method %>:<%= routePath %></title>
  </head>
  <body>
    <h2>
      Help for <%= method %>:<%= routePath %>
    </h2>
    <p class="lead">
      <%= description %>
    </p>
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th></th>
        <th>Type</th>
        <th>Value</th>
        <th class="col-sm-1">Description</th>
      </tr>
      </thead>
      <%
      for (const inputData of inputs){
      %>
      <tr>
        <th scope="row">
          <%= inputData.name %>
        </th>
        <td>
          <span class="badge <%= inputData.vector ? 'badge-success' : 'badge-primary' %>">
            <%= inputData.type %><%= inputData.vector ? '[]': '' %>
          </span>
        </td>
        <td class="<%= inputData.required ? 'text-danger' : 'text-muted' %>">
          <%= inputData.required ? 'required' : 'optional' %>
        </td>
        <td>
          <% if (inputData.description.length){ %>
            <small>
              <%= inputData.description %>
            </small>
          <% } else { %>
            <small>
              <span class='text-muted'>no description</span>
            </small>
          <% } %>

          <% if (inputData.typeHint.length){ %>
            <div>
              <small>* <%= inputData.typeHint %></small>
            </div>
          <% } %>
        </td>
      </tr>
    <% } %>
    </table>
    <div class="card">
      <div class="card-body d-flex justify-content-center">
        This page was created automatically using&nbsp;
        <a href="https://mebohq.github.io">mebohq.github.io</a>
      </div>
    </div>
  </body>
</html>
